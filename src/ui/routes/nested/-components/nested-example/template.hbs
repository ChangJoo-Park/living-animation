<div class="tutorial">
  <button class="tutorial" {{action "addCollection"}}>New Collection</button>
  <button class="tutorial" {{action "addMembers"}}>Add many</button>
  {{#animated-container}}
    {{#animated-each collections use=transition key="title" as |collection|}}
      <div>
        <h2>{{collection.title}}</h2>
        <button class="tutorial" {{action "addMember" collection}}>Add</button>

        {{#animated-container tagName="ul"}}
          {{#animated-each collection.members use=transition key="name" as |member|}}
            <li>{{member.name}}</li>
          {{/animated-each}}
        {{/animated-container}}

      </div>
    {{/animated-each}}
  {{/animated-container}}
</div>